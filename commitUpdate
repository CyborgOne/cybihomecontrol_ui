git add classes
git add includes
git add *.php
git add functions

git commit
git push


#
#  Version hochz√§hlen
#  0.0.0.x = 0.0.0.x+1
versionValue=$(<version.txt)
IFS='.' read -a array <<< "$versionValue"
newVersion=''
for index in "${!array[@]}"
do
#   echo "$index ${array[index]}"
  if [ $index -eq 3 ]; then
    newVersion=$newVersion+ $((${array[index]} + 1));
  else 
    newVersion=$newVersion+${array[index]};
  fi
done

echo $newVersion > version.txt
